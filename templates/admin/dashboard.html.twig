{% extends "admin/layout.html.twig" %}

{% block title %}Dashboard{% endblock %}

{% block pageid %}dashboard{% endblock %}

{% block content %}
<h2>Overview</h2>

<div class="card my-3">
  <div class="card-header">
    This week
  </div>
  <div class="card-block">
    <div class="btn-toolbar mb-3" role="toolbar" aria-label="Toolbar with button groups">
      <div class="input-group ml-auto">
        <span class="input-group-addon" id="basic-addon1">@</span>
        <input type="text" class="form-control" placeholder="mm/dd/yyyy" aria-describedby="basic-addon1">
      </div>
    </div>
    <canvas id="myChart" height="30rem" width="100%"></canvas>

  </div>
</div>

<div class="card-deck">
  <div class="card">
    <div class="card-header">
      User by Countries
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Username</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">1</th>
          <td>Mark</td>
          <td>Otto</td>
          <td>@mdo</td>
        </tr>
        <tr>
          <th scope="row">2</th>
          <td>Jacob</td>
          <td>Thornton</td>
          <td>@fat</td>
        </tr>
        <tr>
          <th scope="row">3</th>
          <td>Larry</td>
          <td>the Bird</td>
          <td>@twitter</td>
        </tr>
      </tbody>
    </table>
    <div class="card-block">
      <a href="#" class="card-link">Card link</a>
      <a href="#" class="card-link">Another link</a>
    </div>
  </div>
  <div class="card">
    <div class="card-block">
      <h4 class="card-title">Card title</h4>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Cras justo odio</li>
      <li class="list-group-item">Dapibus ac facilisis in</li>
      <li class="list-group-item">Vestibulum at eros</li>
    </ul>
    <div class="card-block">
      <a href="#" class="card-link">Card link</a>
      <a href="#" class="card-link">Another link</a>
    </div>
  </div>

</div>
{% endblock %}

{% block bodyscripts %}
  {{ parent() }}

  <script>
    var data = {
      labels: [0, 2.5, 5.0, 7.5, 10.0, 12.5, 15.0, 17.5, 20, 22.5, 25],
      datasets: [
        {
          fill: true,
          backgroundColor: "rgba(75,192,192,0.4)",
          borderColor: "rgba(75,192,192,1)",
          borderWidth: 5,
          pointBorderColor: "rgba(75,192,192,1)",
          pointBackgroundColor: "#fff",
          pointBorderWidth: 1,
          pointHoverRadius: 5,
          pointHoverBackgroundColor: "rgba(75,192,192,1)",
          pointHoverBorderColor: "rgba(220,220,220,1)",
          pointHoverBorderWidth: 2,
          pointRadius: 5,
          data: [9, 13, 8, 15, 12, 35, 15, 18, 12, 15, 17]
        }
      ]
    };

    var myLineChart = new Chart("myChart", {
      type: "line",
      data: data,
      options: {
        defaultFontFamily: "'Open Sans', sans-serif",
        defaultFontSize: "1rem",
        legend: {
          display: false
        },
        scales: {
          yAxes: [{
            ticks: { min: 0, max: 40, stepSize: 10 }
          }]
        }
      }
    });
  </script>
{% endblock %}
