<VirtualHost *:<%= @params[:server_port] %>>
  <% if @params[:docroot] -%>
  DocumentRoot <%= @params[:docroot] %>

  <Directory <%= @params[:docroot] %>>
    AllowOverride None
    Require all granted

    <IfModule mod_rewrite.c>
      Options -MultiViews

      RewriteEngine On
      #RewriteBase /path/to/app
      RewriteCond %{REQUEST_FILENAME} !-f
      RewriteRule ^ index.php [QSA,L]
    </IfModule>
  </Directory>
  <% end -%>
</VirtualHost>
